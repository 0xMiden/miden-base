const.ERR_NOTE_DATA_DOES_NOT_MATCH_COMMITMENT="note data does not match the commitment"

const.ERR_PROLOGUE_NOTE_PAYLOAD_LEN_EXCEEDED_LIMIT="number of note payload values exceeded the maximum limit of 128"

const.ERR_NOTE_INVALID_NUMBER_OF_PAYLOAD_VALUES="the specified number of payload values does not match the actual number"

